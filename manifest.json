{
	"manifest_version": 2,
	"name": "SPOR INSTANTBUL",
	"version": "0.1",
	"description": "Helps with getting quick reservations through 'https://online.spor.istanbul/'",
	"homepage_url": "https://github.com/aktasalper/spor-instantbul",
	"icons": {
		"48": "icons/x48.png",
		"96": "icons/x96.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*.spor.istanbul/*"],
			"js": ["init.js"]
		}
	],
	"permissions": ["activeTab", "storage"],
	"browser_action": {
		"default_icon": "icons/x32.png",
		"default_title": "SPOR INSTANTBUL",
		"default_popup": "popup/index.html"
	},
	"options_ui": {
		"page": "options/index.html"
	},
	"web_accessible_resources": ["assets/logo.png", "assets/branding.png"],
	"browser_specific_settings": {
		"gecko": {
			"id": "spor-instantbul@aktasalper.com",
			"strict_min_version": "0.1"
		}
	}
}
