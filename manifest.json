{
	"manifest_version": 2,
	"name": "SPOR INSTANTBUL",
	"version": "0.1",
	"description": "Helps with getting quick reservations through 'https://online.spor.istanbul/'",
	"homepage_url": "https://github.com/aktasalper/spor-instantbul",
	"icons": {
		"48": "assets/icons/x48.png",
		"96": "assets/icons/x96.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*.spor.istanbul/*"],
			"js": ["spor-instantbul.js"]
		}
	],
	"permissions": ["activeTab", "storage", "tabs"],
	"browser_action": {
		"default_icon": "assets/icons/x32.png",
		"default_title": "SPOR INSTANTBUL",
		"default_popup": "popup/index.html"
	},
	"options_ui": {
		"page": "options/index.html"
	},
	"web_accessible_resources": ["assets/*.png"],
	"browser_specific_settings": {
		"gecko": {
			"id": "spor-instantbul@aktasalper.com",
			"strict_min_version": "0.1"
		}
	},
	"background": {
		"scripts": ["background-script.js"],
		"persistent": false,
		"type": "module"
	}
}
